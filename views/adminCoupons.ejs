<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&family=Rubik:wght@300;400&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/adminproductpage.css" />
    <title>Admin Products Page</title>
  </head>
  <body style="background-color: rgb(236, 236, 243)">
    <div class="mainContainer">
      <div class="rows adminpanel">
        <div class="column"><a class="dashboardlinks " href="#">DASHBOARD</a></div>
        <div class="column"><a class="dashboardlinks " href="#">PRODUCTS</a></div>
        <div class="column">
          <a class="dashboardlinks "  href="/admin/adminCategories">CATEGORIES</a>
        </div>
        <div class="column"><a class="dashboardlinks " href="/admin/adminOrderdetails">ORDERS</a></div>
        <div class="column"><a class="dashboardlinks " href="#">COUPONDS</a></div>
        <div class="column"><a class="dashboardlinks " href="/admin/">CUSTOMERS</a></div>
        <div class="logout-container">
          <form action="/admin/adminProducts/logout" method="post">
            <button class="logout-btn btn-secondary" type="submit">
              Log Out
            </button>
          </form>
        </div>
      </div>

      <div class="container" style="background-color: rgb(236, 236, 243)">
        

        <table class="table caption-top">
          <div class="addcontainer">
            <div class="h5">LIST OF PRODUCTS</div>
            <div class="searchbox d-flex">
              <form id="searchForm" method="GET" class="d-flex" role="search">
                <input
                  id="searchInput"
                  name="query"
                  class="form-control me-2"
                  type="search"
                  placeholder="Search"
                  aria-label="Search"
                />
                <button class="btn btn-outline-success btnSearch" type="submit">
                  Search
                </button>
              </form>
            </div>
            <!-- addproducts -->
            
            <div class="dropdown">
              <button
                class="btn btn-success dropdown-toggle btn-padding button"
                type="button "
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Add Coupon
              </button>
              <ul class="dropdown-menu p-3">
                <li>
                  <form
                    class="dropdown-item"
                    method="POST"
                    action="/admin/AddCoupon "
                  >
                  <div class="d-flex flex-column">
                    <label class="formpd pdright" for="couponname"
                      >Coupon Code</label
                    >
                    <input
                      class="formpd"
                      type="text"
                      id="couponname"
                      name="couponname"
                      required
                    /><br />
                  </div> 

                    <div class="d-flex flex-column">
                      <label class="formpd pdright" for="minmum"
                        >Minimum Price</label
                      >
                      <input
                        class="formpd"
                        type="number"
                        id="minmum"
                        name="minmum"
                        required
                      /><br />
                    </div>
                    
                    <div class="d-flex flex-column">
                      <label class="formpd pdright" for="maximum"
                        >Maximum Price</label
                      >
                      <input
                        class="formpd"
                        type="number"
                        id="maximum"
                        name="maximum"
                        required
                      /><br />
                    </div>
                    <div class="d-flex flex-column">
                      <label class="formpd pdright" for="Discountpercentage"
                        >Discount</label
                      >
                      <input
                        class="formpd"
                        type="number"
                        id="Discountpercentage"
                        name="Discountpercentage"
                        required
                      /><br />
                    </div>
                    <div class="d-flex flex-column">
                      <label class="formpd pdright" for="Discountpercentage"
                        >Expiry Date</label
                      >
                      <input
                        class="formpd"
                        type="date"
                        id="expirydate"
                        name="expirydate"
                        required
                      /><br />
                    </div>
                    <button class="formpd btn btn-danger btns button" type="submit">
                    Create Coupon
                    </button>
                  </form>
                </li>
              </ul>
            </div>
            </button>
          </div>
          <thead>
            <tr>
              <th scope="col">S.NO</th>
              <th scope="col">COUPON CODE</th>
              <th scope="col">MINIMUM PRICE</th>
              <th scope="col"> MAXIMUM PRICE</th>
              <th scope="col">DISCOUNT</th>

              <th scope="col">UPDATE</th>
              <th scope="col">DELETE</th>
            </tr>
          </thead>
          <tbody id="productTableBody">

            <% let num = 1 ;%> <% coupons.forEach((coupon) =>{ %>
            <tr>
              <th scope="row"><%=num%></th>
              <td>
                <div class="couponname">
                  
                  <p><%=coupon.couponCode%></p>
                </div>
              </td>
              <td><%=coupon.min%></td>
              <td><%= coupon.max %></td>
              <td><%=coupon.Discount%></td>

             
              <td>
                <div class="dropdown">
                  <button
                    class="btn btn-success dropdown-toggle btn-padding button"
                    type="button "
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                  >
                    Update
                  </button>
                  <ul class="dropdown-menu p-3">
                    <li>
                      <form
                        class="dropdown-item"
                        method="POST"
                        action="/admin/updateCoupon/<%=coupon._id%>  "
                      >
                        
    
                        <div class="d-flex flex-column">
                          <label class="formpd pdright" for="min"
                            >Minimum Price</label
                          >
                          <input
                            class="formpd"
                            type="number"
                            id="min"
                            name="min"
                            required
                          /><br />
                        </div>
                        
                        <div class="d-flex flex-column">
                          <label class="formpd pdright" for="max"
                            >Maximum Price</label
                          >
                          <input
                            class="formpd"
                            type="number"
                            id="max"
                            name="max"
                            required
                          /><br />
                        </div>
                        <div class="d-flex flex-column">
                          <label class="formpd pdright" for="Discount"
                            >Discount</label
                          >
                          <input
                            class="formpd"
                            type="number"
                            id="Discount"
                            name="Discount"
                            required
                          /><br />
                        </div>
                        <div class="d-flex flex-column">
                          <label class="formpd pdright" for="Discountpercentage"
                            >Expiry Date</label
                          >
                          <input
                            class="formpd"
                            type="date"
                            id="expirydate"
                            name="expirydate"
                            required
                          /><br />
                        </div>
                        <button class="formpd btn btn-danger btns button" type="submit">
                        Update Coupon
                        </button>
                      </form>
                    </li>
                  </ul>
                </div>
              </td>
              <td>
                <form
                  method="post"
                  action="/admin/deleteCoupon/<%=coupon._id%>   "
                >
                  <button type="submit" class="btn btn-danger btns button">
                    Delete
                  </button>
                </form>
              </td>
            </tr>
            <% num = num+1%> <% }) %>
          </tbody>
           
        </table>
        
        <div id="pagination">
          <ul class="pagination">
            <% if (currentPage > 1) { %>
              <li class="page-item"><a  class="page-link" href="#">Previous</a></li>
            <% } %>
        
            <% for (let i = 1; i <= totalPages; i++) { %>
              <li <% if (currentPage === i) { %>class="active page-item"<% } %>>
                <a class="page-link"  href="#"><%= i %></a>
              </li>
            <% } %>
        
            <% if (currentPage < totalPages) { %>
              <li class="page-item"><a  class="page-link" href="#">Next</a></li>
            <% } %>
          </ul>
        </div>
      </div>
      
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
    <script>
      const ITEMS_PER_PAGE =3 ;


      function populateUpdateForm(userId, name, email) {
        // Get the form fields by their IDs
        const updateNameField = document.getElementById(`updateName${userId}`);
        const updateEmailField = document.getElementById(
          `updateEmail${userId}`
        );

    
        updateNameField.value = name;
        updateEmailField.value = email;
      }
      document.addEventListener("DOMContentLoaded", () => {
        const searchForm = document.getElementById("searchForm");
        const searchInput = document.getElementById("searchInput");
        const productTableBody = document.getElementById("productTableBody"); 
        const paginationBody = document.getElementById("pagination")
        searchForm.addEventListener("submit", async (e) => {
          e.preventDefault();

          const query = searchInput.value;

          // Use AJAX to send a search request to the server
          try {
            const response = await fetch(`/admin/search?query=${query}`);
            if (!response.ok) {
              throw new Error("Network response was not ok");
            }

            const data = await response.json();

            // Clearing  existing products 
            productTableBody.innerHTML = "";
            paginationBody.innerHTML="";
         
            let num = 1;
            data.results.forEach((product) => {
             
              const row = document.createElement("tr");
              row.innerHTML = ` <th scope="row">${num}</th>
                <td>
                  <div class="productname">
                    <img
                      class="productimg"
                      src="${product.productImages[0]}"
                      alt=""
                    />
                    <p>${product.productName}</p>
                  </div>
                </td>
                <td>${product.productCategory}</td>
                <td>${product.productPrice}</td>
                <td>${product.productStock}</td>
                <td>active</td>
                <td>
                  <div class="action">
                    <!-- UPDATE -->
                    <div class="dropdown">
                      <button
                        class="btn btn-info dropdown-toggle btns"
                        type="button"
                        data-bs-toggle="dropdown"
                        aria-expanded="false"
                        onclick="populateUpdateForm('${product._id}', '${product.productName}', '${product.productCategory}')"
                      >
                        Update
                      </button>
                      <ul class="dropdown-menu">
                        <li>
                          <form
                            class="dropdown-item"
                            method="post"
                            action="/admin/update/${product._id}"
                          >
                            <!-- Your form fields go here -->
                          </form>
                        </li>
                      </ul>
                    </div>
                    <!-- DELETE -->
                  </div>
                </td>
                <td>
                  <form
                    method="post"
                    action="/admin/adminProducts/delete/${product._id}"
                  >
                    <button type="submit" class="btn btn-danger btns">
                      Delete
                    </button>
                  </form>
                </td>
              `;
              num = num + 1;
              productTableBody.appendChild(row);
            });
      //       const paginationHTML = generatePaginationLinks(data.currentPage, data.totalPages, data.query);
            


          } catch (error) {
            console.error("Error performing search:", error);
          }
        });

      });
      function generatePaginationLinks(currentPage, totalPages, query) {
  let paginationHTML = `<ul class="pagination">`;

  if (currentPage > 1) {
    paginationHTML += `<li class="page-item"><a class="page-link" href="/admin/search?query=${query}&page=${currentPage - 1}">Previous</a></li>`;
  }

  for (let i = 1; i <= totalPages; i++) {
    if (currentPage === i) {
      paginationHTML += `<li class="active page-item"><a class="page-link" href="/admin/search?query=${query}&page=${i}">${i}</a></li>`;
    } else {
      paginationHTML += `<li class="page-item"><a class="page-link" href="/admin/search?query=${query}&page=${i}">${i}</a></li>`;
    }
  }

  if (currentPage < totalPages) {
    paginationHTML += `<li class="page-item"><a class="page-link" href="/admin/search?query=${query}&page=${currentPage + 1}">Next</a></li>`;
  }

  paginationHTML += `</ul>`;
  return paginationHTML;
}

    </script>
  </body>
</html>
