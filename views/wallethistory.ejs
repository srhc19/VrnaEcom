  <body>
    <div class="container nav-container">
      <div class="nav-main">
        <h2 class="navmain-heading">VRNA</h2>
        <h5>SHOP</h5>
        <h5>CONTACT</h5>
        <h5>ABOUT</h5>
      </div>
      <div class="nav-sec">
        <h5><ion-icon name="search-outline"></ion-icon> </h5>
        <h5><ion-icon name="person-outline"></ion-icon></h5>
        <h5><ion-icon name="cart-outline"></ion-icon></h5>
        </div>
    </h5>
    </div>
    <h2 class="primary-heading">Wallet History</h2>
    <div class="container outerContainer">

       
          <div class="container text-center cardContainer d-flex ">
            <table class="table caption-top">
              <div class="addcontainer">
              
               
              </div>
              <thead>
                <tr>
                  <th scope="col">S.NO</th>
                  <th scope="col">Order Id</th>
                  <th scope="col">Transactions</th>
                  <th scope="col">Amount</th>
               
                  <!-- <th scope="col">PRICE</th>
              
    
                  <th scope="col">COUNT</th> -->
         
                </tr>
              </thead>
            
              <tbody id="productTableBody" class="wallet-body">
                <% let num = 1; %>
                <% wallet.forEach((transaction) => { %>
                  <tr>
                    <th scope="row"><%= num %></th>
          
                    <td><a href="/user/orderdetails/<%= transaction.orderid ? transaction.orderid : "" %>" class="order-id-link"><%= transaction.orderid ? transaction.orderid : " " %></a></td>


                    <td>
                      <div class="productname">
                        <% if (transaction.amount > 0) { %>
                          <p>Credited</p>
                        <% } else { %>
                          <p>Debited</p>
                        <% } %>
                      </div>
                    </td>
                    <td><%= transaction.amount %></td>
                  </tr>
                  <% num = num + 1; %>
                <% }); %>
              </tbody>
               
            </table>
           
            </div>
           <!-- Pagination links -->
 

        
      
      <div class="container priceContainer">



     
          <p class="pricedetailsp"><span class="price-heading">Total Amount :</span><span id="price"> $<%= totalamount %></span></p>
  
        <a href="/user/">  <button class=".button btn btn-Buynow">Back To Shopping</button></a>
        <a href="/user/userprofile">  <button class=".button btn btn-Buynow">User Profile</button></a>
        </div>
      </div>  
      <div class="pagination">
        <% if (hasPrevPage) { %>
          <a href="?page=<%= prevPage %>">Previous</a>
        <% } %>
        
        <% for (let i = 1; i <= lastPage; i++) { %>
          <a href="?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
        <% } %>
    
        <% if (hasNextPage) { %>
          <a href="?page=<%= nextPage %>">Next</a>
        <% } %>
      </div>
    <footer>
      <div class="text-center footer-container">
        <div class="container">
          <div class="container row">
            <div class="col">
              <ul class="footerul">
                <li><h1 class="heading-footer footer-link">VRNA</h1></li>
